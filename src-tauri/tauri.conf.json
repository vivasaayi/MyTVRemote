{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sony TV Remote",
  "version": "0.1.0",
  "mainBinaryName": "sony-tv-remote",
  "identifier": "com.sony.tv.remote",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173"
  },
  "bundle": {
    "active": false,
    "targets": "all",
    "macOS": {
      "entitlements": "Entitlements.plist"
    }
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Sony TV Remote",
        "width": 420,
        "height": 720,
        "url": "index.html",
        "resizable": true
      }
    ]
  },
  "plugins": {}
}